# SaaS Landing Page Generator Configuration

# Node Environment
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/saas_landing_generator

# Redis Configuration (for queues and caching)
REDIS_URL=redis://localhost:6379

# AI Service Keys (Use either OpenAI or Anthropic, or both)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Storage (for generated files)
STORAGE_PATH=./generated
STORAGE_PUBLIC_URL=http://localhost:3000/generated

# Security
JWT_SECRET=your_super_secret_jwt_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Deployment Integrations
GITHUB_TOKEN=your_github_token
VERCEL_TOKEN=your_vercel_token
NETLIFY_TOKEN=your_netlify_token

# Stripe (for future monetization)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Feature Flags
ENABLE_INTERACTIVE_DEMOS=true
ENABLE_AB_TESTING=true
ENABLE_ANALYTICS=true
MAX_VARIANTS_PER_TEST=5
DEMO_RECORDING_QUALITY=high